.header 
    background-color: #77caa5;
    /*background-color: #42b883;*/
    /*background-color: linen;*/
    position: fixed;
    z-index: 999;
    height: 55px;
    top: 0;
    left: 0;
    right: 0;
    box-shadow: 0px 3px 5px #ccc;


.header .inner 
    max-width: 800px;
    box-sizing: border-box;
    margin: 0 auto;
    padding: 15px 5px;


.header .github 
    color: #fff;
    font-size: .9em;
    margin: 0;
    float: right;


.header a 
    color: hsla(0, 0%, 100%, .8);
    line-height: 24px;
    transition: color .15s ease;
    display: inline-block;
    vertical-align: middle;
    font-weight: 300;
    letter-spacing: .075em;
    margin-right: 1.8em;


.header a 
    text-decoration: none;
    border-bottom: 1px dashed #CCC;
    /*padding: 1px;*/


.header a:hover 
    color: #111;
    font-style: oblique;
    border-bottom: 1px solid hotpink;
    transition: 0.5s ease;


.search{
  position: absolute;
  right:32%
  top:15%
  width: 5%;
  height:30px;
  background-color: #77caa5;
  color: black;
  border:0px;
  outline:none
  border-bottom: 1px white solid;
  text-align: right;
  font-size: 20px;
  transition: 1s;
}

.search::-webkit-input-placeholder{
    color: gray;
    font-style: italic;
    text-align: right;
    
}

.search:focus{
    width:7%;
    border:none;
    border-bottom: 1px black solid;
}